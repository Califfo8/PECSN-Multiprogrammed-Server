module Server
{
    parameters:

    gates:
        // o così o si usa un vettore di clientIN e clientOUT
        input clientIN;
        output clientOUT;

        input webServerIN;
        output webServerOUT;

        //input hdIN;	// inutile
        //output hdOUT; // inutile

    submodules:
        hd: HardDisk;
        cpu: Cpu;
    connections:
        // dove vanno messi i delay

        cpu.hdOUT --> hd.in;
        hd.out --> cpu.hdIN;

        cpu.clientOUT --> clientOUT;
        clientIN --> cpu.clientIN;

        cpu.webServerOUT --> webServerOUT;
        webServerIN --> cpu.webServerIN;





}
